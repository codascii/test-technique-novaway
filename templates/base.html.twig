<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Buy More{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>

            <header class="header container clearfix">
                <nav>
                    <ul class="nav nav-pills float-right">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('cart_detail') }}">
                                Panier ({{ app.session.get('cart')|length }})
                            </a>
                        </li>
                        <li class="nav-item">
                            {% if is_granted('ROLE_USER') %}
                                <a class="nav-link" href="{{ path('logout') }}">Déconnexion</a>
                                {{ app.user.email }}
                            {% else %}
                                <a class="nav-link" href="{{ path('login') }}">Connexion</a>
                            {% endif %}
                        </li>
                    </ul>
                </nav>
                <h3 class="text-muted"><a href="{{ path('homepage') }}"><img src="/img/BuyMoreLogo.png" alt=""></a></h3>
            </header>

            <main role="main" class="container">
            {% block body %}{% endblock %}
            </main>
            <footer class="footer">
                <div class="container">
                    <span class="text-muted">© Novaway 2023</span>
                </div>
            </footer>
            {% block javascripts %}{% endblock %}

    </body>
</html>
